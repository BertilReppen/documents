<?xml version="1.0" encoding="UTF-8"?>
<TestScript xmlns="http://hl7.org/fhir">
	<id value="connectathon-16-observation-lastn-query-bp-resp-heart-xml"/>

	<url value="http://wildfhir.aegis.net/fhir3-0-1/TestScript/connectathon-16-observation-lastn-query-bp-resp-heart-xml"/>
	<name value="FHIR Connectathon 16 - LastN Query - XML - BP Respiratory and Heart Rates"/>
	<status value="active"/>
	<date value="2017-07-26"/>
	<publisher value="AEGIS.net, Inc."/>
	<contact>
		<name value="Touchstone Support"/>
		<telecom>
			<system value="email"/>
			<value value="Touchstone_Support@aegis.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="Fetch the last 3 Observation blood pressures, respiratory rate and heart rates for a known patient using the XML format and HTTP GET (no Parameters)."/>
	<copyright value="Â© AEGIS.net, Inc. 2015+"/>

	<metadata>
		<capability>
			<required value="true"/>
			<description value="Observation $lastn extended operation"/>
			<link value="http://hl7.org/fhir/STU3/observation-operations.html#lastn"/>
			<capabilities>
				<reference value="../_reference/capabilities/ObservationLastNCapabilityStatement.xml" />
			</capabilities>
		</capability>
	</metadata>

	<fixture id="lastn-max3">
		<resource>
			<reference value="../_reference/resources/lastn-max3.xml"/>
		</resource>
	</fixture>

	<profile id="bundle-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Bundle"/>
	</profile>
	<profile id="observation-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/Observation"/>
	</profile>
	<profile id="operationoutcome-profile">
		<reference value="http://hl7.org/fhir/StructureDefinition/OperationOutcome"/>
	</profile>

	<variable>
		<name value="patientResourceId" />
		<description value="Enter a known patient FHIR resource id on the destination system." />
		<hint value="[Resource Id]" />
	</variable>

	<!-- no setup -->

	<test id="Test1-ObservationLastNVitals-GET">
		<name value="Test1-ObservationLastNVitals-GET"/>
		<description value="Fetch the last 3 Observation blood pressures, respiratory rate and heart rates for a known patient using the XML format and HTTP GET (no Parameters). The expected response code is 200 (OK) with a Bundle resource in XML format of type searchset containing the found Observations."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="lastn"/>
				</type>
				<resource value="Observation"/>
				<description value="Fetch the last 3 results of all Observation vitals for a known patient using the XML format and HTTP GET (no Parameters)."/>
				<accept value="xml"/>
				<contentType value="none"/>
				<params value="/$lastn?max=3&amp;patient=${patientResourceId}&amp;category=vital-signs&amp;code=9279-1,8867-4,85354-9"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<direction value="response"/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<direction value="response"/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<direction value="response"/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the base FHIR Bundle profile."/>
				<direction value="response"/>
				<validateProfileId value="bundle-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Bundle.type is searchset."/>
				<direction value="response"/>
				<path value="/Bundle/type"/>
				<value value="searchset"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other vital sign records returned."/>
				<direction value="response"/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the Bundle total value matches or is greater than the number of entries in the Bundle."/>
				<direction value="response"/>
				<expression value="Bundle.total.toInteger() &gt;= entry.count()"/>
			</assert>
		</action>
	</test>

	<test id="Test2-ObservationLastNVitals-POST">
		<name value="Test2-ObservationLastNVitals-POST"/>
		<description value="Fetch the last 3 Observation blood pressures, respiratory rate and heart rates for a known patient using the XML format and HTTP POST (with Parameters). The expected response code is 200 (OK) with a Bundle resource in XML format of type searchset containing the found Observations."/>

		<action>
			<operation>
				<type>
					<system value="http://hl7.org/fhir/testscript-operation-codes"/>
					<code value="lastn"/>
				</type>
				<resource value="Observation"/>
				<description value="Fetch the last 3 results of all Observation vitals for a known patient using the XML format and HTTP POST (with Parameters)."/>
				<accept value="xml"/>
				<contentType value="xml"/>
				<params value="/$lastn?patient=${patientResourceId}&amp;category=vital-signs&amp;code=9279-1,8867-4,85354-9"/>
				<sourceId value="lastn-max3"/>
			</operation>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned HTTP status is 200(OK)."/>
				<direction value="response"/>
				<response value="okay"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned format is XML."/>
				<direction value="response"/>
				<contentType value="xml"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned resource type is Bundle."/>
				<direction value="response"/>
				<resource value="Bundle"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Validate that the returned resource conforms to the base FHIR Bundle profile."/>
				<direction value="response"/>
				<validateProfileId value="bundle-profile"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the returned Bundle.type is searchset."/>
				<direction value="response"/>
				<path value="/Bundle/type"/>
				<value value="searchset"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that there is at least one record returned. There could be other vital sign records returned."/>
				<direction value="response"/>
				<operator value="greaterThan"/>
				<path value="/Bundle/total"/>
				<value value="0"/>
			</assert>
		</action>
		<action>
			<assert>
				<description value="Confirm that the Bundle total value matches or is greater than the number of entries in the Bundle."/>
				<direction value="response"/>
				<expression value="Bundle.total.toInteger() &gt;= entry.count()"/>
			</assert>
		</action>
	</test>
</TestScript>